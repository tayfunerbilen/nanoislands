func nb-header(nodeset header) {
    default = {
        'arrow': {
            'search': 'true'
            'buttonContent': 'Найти'
            'class': 'nb-header-arrow'
        }
        'services': 'true'
        'settings': 'true'
        'yaHref': 'http://yandex.ru'
    }

    nb-block('header', nb-deep-extend(default, header))
}

match .header nb {
    <div class="nb-header _init" data-nb="header">
        apply . nb-main-attrs
        <div class="nb-header-actions">

            if .settings == 'true' {

                <div class="nb-header-button">
                    <div class="nb-header-button-icon">
                        nb-icon({
                            'icon': 'settings'
                            'size': 'm'
                        })
                    </div>
                </div>
            }

            if .services == 'true' {

                <div class="nb-header-button">
                    <div class="nb-header-button-icon">
                        nb-icon({
                            'icon': 'services'
                            'size': 'm'
                        })
                    </div>
                </div>
            }
            if .user {
                nb-user(.user)
            }
        </div>
        <div class="nb-header-main">
            <a href="{.yaHref}" class="nb-header-logo"></a>
            nb-arrow(.arrow)
        </div>
    </div>
}