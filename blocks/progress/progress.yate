func nb-progress(nodeset options) {
    default = {
        'bar': 'true'
        'start': '0'
        'type': 'percentage'
        'title': ' '

        // показывать проценты
        // 'type': 'title'

    }

    nb-block('progress', nb-extend(default, options))
}

match .progress nb {
    <div data-nb='progress' data-nb-type='{ .type }'>
        _size-theme-type-class({
           'name': 'progress'
           'type': .type
        })

        @class += " _init"

        apply . nb-main-attrs

        if .bar {
            <div class="nb-progress-bar js-bar" style="width: { .start }%"></div>
        }

        if .title {
            <div class="nb-progress-title js-title">
                if .type == 'percentage' {
                    .start + '%'
                } else {
                    .title
                }
            </div>
        }
        <input type="hidden" value="{ .start }%" />
    </div>
}


