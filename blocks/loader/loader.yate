func nb-loader(nodeset options) {
    default = {
        'size': 'm'
    }

    _nb-block('loader', _nb-extend(default, options))
}

match .loader nb {
    <span>
        _size-theme-type-class({
           'name': 'loader'
           'size': .size
        })

        apply . nb-main-attrs

        <span class="nb-loader-spinner">
            if .color {
                @class += " nb-loader-{ .color }-spinner"
            }
        </span>
    </span>
}
